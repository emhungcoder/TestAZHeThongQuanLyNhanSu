@model TestAZHeThongQuanLyNhanSu.Models.WorkingHours

@{
    ViewData["Title"] = "Chỉnh Sửa Ca Làm Việc";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="@(ViewData["EmployeeId"] as SelectList)"></select>
    </div>

    <div class="form-group">
        <label asp-for="TimeSlotId"></label>
        <select asp-for="TimeSlotId" class="form-control" asp-items="@(ViewData["TimeSlotId"] as SelectList)"></select>
    </div>

    <div class="form-group">
        <label asp-for="WorkDate"></label>
        <input asp-for="WorkDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
