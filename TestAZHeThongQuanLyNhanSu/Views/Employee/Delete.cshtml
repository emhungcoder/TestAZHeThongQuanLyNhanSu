@model TestAZHeThongQuanLyNhanSu.Models.Employee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h2>Xác nhận xóa nhân viên</h2>

<div>
    <h4>@Model.FullName</h4>
    <dl class="row">
        <dt class="col-sm-2">Tên đăng nhập</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Chức vụ</dt>
        <dd class="col-sm-10">@Model.Position?.Name</dd>

        <dt class="col-sm-2">Ngày bắt đầu</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
