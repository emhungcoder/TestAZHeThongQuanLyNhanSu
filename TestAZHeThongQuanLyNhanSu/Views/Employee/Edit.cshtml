@model TestAZHeThongQuanLyNhanSu.Models.Employee

@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Tên đăng nhập</label>
        <input class="form-control" value="@Model.UserName" readonly />
    </div>
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Mật khẩu mới (nếu muốn thay đổi)</label>
        <input name="PasswordHash" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Giới tính</label>
        <select asp-for="Gender" class="form-control" required>
            <option value="">-- Chọn giới tính --</option>
            <option value="Nam" selected="@("Nam" == Model.Gender)">Nam</option>
            <option value="Nữ" selected="@("Nữ" == Model.Gender)">Nữ</option>
            <option value="Khác" selected="@("Khác" == Model.Gender)">Khác</option>
        </select>
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="Address" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
