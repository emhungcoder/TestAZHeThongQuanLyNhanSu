@model TestAZHeThongQuanLyNhanSu.Models.TimeSlot

@{
    ViewData["Title"] = "Tạo Ca Làm Mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Tên Ca</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="form-group">
        <label for="StartTime">Giờ Bắt Đầu</label>
        <input type="time" class="form-control" id="StartTime" name="StartTime" required />
    </div>

    <div class="form-group">
        <label for="EndTime">Giờ Kết Thúc</label>
        <input type="time" class="form-control" id="EndTime" name="EndTime" required />
    </div>

    <button type="submit" class="btn btn-primary">Tạo Ca Làm</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Trở lại</a>
