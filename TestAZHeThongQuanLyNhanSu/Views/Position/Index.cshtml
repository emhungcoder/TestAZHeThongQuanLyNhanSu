@model List<TestAZHeThongQuanLyNhanSu.Models.Position>

<table class="table">
    <thead>
        <tr>
            <th>Tên chức vụ</th>
            <th>Lương cơ bản</th>
            <th>Phụ cấp</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.BasicSalary.ToString("N0")</td>
                <td>@item.Allowance.ToString("N0")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
