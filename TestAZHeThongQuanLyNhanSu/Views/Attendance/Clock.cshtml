@{
    ViewData["Title"] = "Chấm công";
}

<h2 class="mt-4">Chấm công</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>Xin chào, <strong>@User.Identity?.Name</strong></p>

<form asp-action="ClockIn" method="post" class="mb-3">
    <button type="submit" class="btn btn-success">Chấm công vào</button>
</form>

<form asp-action="ClockOut" method="post">
    <button type="submit" class="btn btn-danger">Chấm công ra</button>
</form>
